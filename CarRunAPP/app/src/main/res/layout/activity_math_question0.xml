<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MathQuestionActivity0"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/top_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(1)、当X->0时，若X-tanX与X^k是同阶无穷小，则K="
        android:textColor="#000000"

        android:textSize="16sp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="15dp"/>
    <RelativeLayout
        android:id="@+id/question_content"
        android:layout_below="@+id/top_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/option1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_error"
            android:layout_marginTop="40dp"
            android:button="@null"
            android:layout_marginLeft="50dp"/>
        <CheckBox
            android:id="@+id/option2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_error"
            android:layout_marginTop="40dp"
            android:button="@null"
            android:layout_below="@+id/option1"

            android:layout_marginLeft="50dp"/>
        <CheckBox
            android:id="@+id/option3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_error"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/option2"
            android:button="@null"
            android:layout_marginLeft="50dp"/>
        <CheckBox
            android:id="@+id/option4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_yes"
            android:button="@null"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/option3"
            android:layout_marginLeft="50dp"/>

        <TextView
            android:id="@+id/option_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A:1"
            android:layout_toRightOf="@+id/option1"
            android:textColor="#000000"
            android:textSize="32sp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="70dp"/>
        <TextView
            android:id="@+id/option_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A:1"
            android:layout_toRightOf="@+id/option2"
            android:textColor="#000000"
            android:textSize="32sp"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/option_text1"
            android:layout_marginLeft="70dp"/>
        <TextView
            android:id="@+id/option_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A:1"
            android:layout_toRightOf="@+id/option2"
            android:textColor="#000000"
            android:textSize="32sp"
            android:layout_marginTop="45dp"
            android:layout_below="@+id/option_text2"
            android:layout_marginLeft="70dp"/>
        <TextView
            android:id="@+id/option_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A:1"
            android:layout_toRightOf="@+id/option3"
            android:textColor="#000000"
            android:textSize="32sp"
            android:layout_marginTop="45dp"
            android:layout_below="@+id/option_text3"
            android:layout_marginLeft="70dp"/>




    </RelativeLayout>
    <ImageView
        android:id="@+id/next"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/next"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/question_content"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>