<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBFB"
    >
    <ImageView
        android:id="@+id/top"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/cat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>
    <TextView
        android:layout_below="@+id/top"
        android:id="@+id/alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未注册用户输入用户名密码即可注册"
        android:textColor="#4C4B4B"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"

        />
    <EditText
        android:id="@+id/phone"
        android:layout_below="@+id/alert"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:hint="请输入用户名"
        android:paddingLeft="20dp"

        style="@style/LoginEdit"
        android:textColor="#000000" />
    <EditText
        android:id="@+id/code"
        android:layout_below="@+id/phone"


        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:hint="请输入密码"
        android:paddingLeft="20dp"

        style="@style/LoginEdit"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/register"
        android:layout_below="@+id/code"

        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:text="注册"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        style="@style/LoginEdit2"
        android:alpha="0.75"


        />

    <TextView
        android:layout_below="@+id/register"

        android:id="@+id/userpwd"
        android:layout_alignLeft="@+id/alert"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已有账号？去登录"
        android:textColor="#000000"/>
    <CheckBox
        android:layout_below="@+id/userpwd"
        android:id="@+id/checkbox"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/alert" />
    <TextView
        android:id="@+id/policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我同意《YX》协议"
        android:layout_toRightOf="@+id/checkbox"
        android:layout_below="@+id/userpwd"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:layout_alignBaseline="@+id/checkbox"

        />
    <TextView
        android:id="@+id/bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最终解释权归YX所有"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"

        android:layout_marginBottom="3dp"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>