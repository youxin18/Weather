<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yanhua">

    <TextView
        android:layout_below="@+id/top"
        android:id="@+id/alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未注册用户输入信息即可注册"
        android:textColor="#FFFEFE"
        android:textSize="20sp"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:alpha="0.5"/>
    <RelativeLayout
        android:id="@+id/login_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
    <EditText
        android:id="@+id/phone"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:hint="请输入用户名"
        android:paddingLeft="20dp"

        style="@style/LoginEdit"
        android:alpha="0.5"
        android:textColor="#000000" />
  <EditText
        android:id="@+id/code"
        android:layout_below="@+id/phone"


        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:hint="请输入密码"
        android:paddingLeft="20dp"
      android:alpha="0.5"

        style="@style/LoginEdit"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/register"


        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:text="注册"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        style="@style/LoginEdit2"
        android:alpha="0.65"
   android:layout_below="@+id/code"/>
    </RelativeLayout>

    <TextView
        android:layout_below="@+id/login_box"

        android:id="@+id/userpwd"
        android:layout_alignLeft="@+id/alert"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="去登录"
        android:alpha="0.5"
        android:textColor="#F6F5F5"/>
    <CheckBox
        android:layout_below="@+id/userpwd"
        android:id="@+id/checkbox"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/alert" />
    <TextView
        android:id="@+id/policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我同意《YX》协议"
        android:layout_toRightOf="@+id/checkbox"
        android:layout_below="@+id/userpwd"
        android:layout_marginTop="10dp"
        android:textColor="#FBFBFB"
        android:layout_alignBaseline="@+id/checkbox"
        android:alpha="0.5"

        />
    <TextView
        android:id="@+id/bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最终解释权归YX所有"
        android:textColor="#FDFDFD"
        android:layout_alignParentBottom="true"
        android:alpha="0.5"

        android:layout_marginBottom="3dp"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>